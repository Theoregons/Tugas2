<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000"/> <!-- Warna bayangan -->
            <corners android:radius="5dp"/> <!-- Radius sudut -->
        </shape>
    </item>
    <!-- Main Background Layer -->
    <item android:top="-3dp" android:left="-3dp" android:right="1dp" android:bottom="3dp"> <!-- Meningkatkan nilai top dan left untuk ketebalan -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Warna latar belakang -->
            <corners android:radius="8dp"/> <!-- Radius sudut -->
        </shape>
    </item>
</layer-list>